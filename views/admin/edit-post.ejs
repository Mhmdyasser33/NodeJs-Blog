<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>Edit Post</h2>
</div>
<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
    <label for="title"><strong>Title</strong></label>
    <input type="text" name="title" id="title" placeholder="Post Title..." value="<%= data.title %>" />
    <label for="body"><strong>Content</strong></label>
    <textarea name="body" id="body" rows="10" cols="50"><%= data.body %></textarea>
    <input type="submit" class="btn" value="Edit" />
</form>